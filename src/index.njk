---
layout: layouts/base.njk
socialMediaPreviewImage: /images/6b9698285888b8e8184878a8d8083868_1920x300_light.png
title: David Moll's Blog
---

<div class="container mx-auto px-4 py-8">
  <h1 class="text-4xl font-bold mb-8">Blog Posts</h1>
  
  {% if collections.posts %}
  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6 mb-12">
    {% set posts = collections.posts | reverse %}
    {% for post in posts %}
      {% if loop.index <= 3 %}
    <article class="bg-white rounded-lg overflow-hidden flex flex-col">
      <a href="{{ post.url }}" class="flex flex-col flex-1 no-underline">
        {% if post.data.socialMediaPreviewImage %}
        <div class="w-full relative">
          <img 
            src="{{ post.data.socialMediaPreviewImage }}" 
            alt="{{ post.data.socialMediaPreviewImageAlt or post.data.title }}"
            class="w-full h-64 md:h-40 lg:h-32 object-cover"
          >
          <div class="absolute bottom-0 left-0 p-1 md:p-2">
            <h2 class="font-bold">
              <span class="bg-white px-2 py-2 inline-block text-3xl sm:text-xl md:text-lg lg:text-lg xl:text-xl">
                {{ post.data.title }}
              </span>
            </h2>
          </div>
        </div>
        {% else %}
        <div class="p-6 pb-0">
          <h2 class="text-xl font-bold mb-2 text-indigo-600">
            {{ post.data.title }}
          </h2>
        </div>
        {% endif %}
        
        <div class="p-6 flex flex-col flex-1">
          {% if post.data.description %}
          <p class="text-gray-600 mb-4 text-sm flex-1">{{ post.data.description }}</p>
          {% endif %}
          
          <div class="flex flex-col gap-2 text-sm text-gray-500 mt-auto">
            {% if post.data.author %}
            <span>By {{ post.data.author }}</span>
            {% endif %}
            
            {% if post.data.date %}
            <span>{{ post.data.date.toLocaleDateString() }}</span>
            {% endif %}
            
            {% if post.data.tags %}
            <div class="flex flex-wrap gap-2 mt-2">
              {% for tag in post.data.tags %}
                {% if tag != "posts" %}
                <span class="bg-purple-100 text-purple-700 px-2 py-1 rounded text-xs">
                  {{ tag }}
                </span>
                {% endif %}
              {% endfor %}
            </div>
            {% endif %}
          </div>
        </div>
      </a>
    </article>
      {% endif %}
    {% endfor %}
    <a href="/blog/" class="text-indigo-600 hover:text-indigo-800 font-medium inline-block">View all posts</a>
  </div>
  {% endif %}



  <h1 class="text-4xl font-bold mb-8">Latest from me across the web</h1>
  {% if bluesky and bluesky.length > 0 %}
  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
    {% for post in bluesky %}
    <article class="bg-white p-6 rounded-lg flex flex-col">
      <div class="mb-2">
        <h2 class="text-xl font-bold text-gray-900 leading-tight">
          <a href="{{ post.url }}"
             class="hover:text-indigo-600 transition-colors"
             target="_blank"
             rel="noopener noreferrer">
          </a>
        </h2>
        <span class="text-xs text-gray-500 block mt-1">
          {{ post.date.toLocaleDateString() }}
        </span>
      </div>

      {% if post.content %}
      <div class="text-gray-700 mb-4 grow">
        {{ post.content | safe }}
      </div>
      {% endif %}

      <a href="{{ post.url }}"
         class="text-indigo-600 hover:text-indigo-800 text-sm font-medium mt-auto inline-block"
         target="_blank"
         rel="noopener noreferrer">
        View on Bluesky â†’
      </a>
    </article>
    {% endfor %}
  </div>
  {% else %}
  <p class="text-gray-600">No posts available at the moment.</p>
  {% endif %}
</div>
