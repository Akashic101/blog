{% extends "base.njk" %}
{% block blog %}
<h1>{{ title }}</h1>

<aside>
  <details>
    <summary>
      <h2>Metadata</h2>
    </summary>
    <table>
      <thead>
        <tr>
          <th>Thing</th>
          <th>Value</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>Author</td>
          <td>{{ author }}</td>
        </tr>
        <tr>
          <td>Published</td>
          <td>{{ date | dateDisplay }}</td>
        </tr>
        <tr>
          <td>Tags</td>
          <td>{{ tags | joinedTags }}</td>
        </tr>
        <tr>
          <td>Size</td>
          <td>FILESIZE KB</td>
        </tr>
        <tr>
          <td>Description</td>
          <td>{{ description }}</td>
        </tr>
        <tr>
          <td>License (Unless stated otherwise)</td>
          <td><a href="https://creativecommons.org/licenses/by-sa/4.0/">CC-BY SA 4.0</a></td>
        </tr>
      </tbody>
    </table>
  </details>
</aside>

{% endblock %}
